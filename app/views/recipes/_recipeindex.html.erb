<div id="<%= dom_id recipe %>">
  <h5>
    <%= recipe.name %>
  </h5>

  <% if can? :destroy, recipe %>
    <%= button_to "Remove", recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe ?' } %>
  <% end %>

  <p>
    <%= recipe.description %>
  </p>

</div>
