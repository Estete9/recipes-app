<!-- app/views/inventories/new.html.erb -->
<div class="container mt-4">
  <h1 class="mb-4">New Inventory</h1>

  <%= render "form", inventory: @inventory do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.collection_select(:food_ids, Food.all, :id, :name, {}, { multiple: true, class: 'form-select' }) %>
    </div>

    <div class="mb-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Inventories', inventories_path, class: 'btn btn-light mt-4' %>
</div>
