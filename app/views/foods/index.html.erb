<%= image_tag '', class: 'headline-image w-100 opacity-6' %>

<section class="main_page_wrapper w-100">
  <div class="container section-container d-flex flex-column align-items-center">

    <h1 class="main-title mt-5 mb-4">Foods List</h1>

    <div class="w-100">
      <div class="button-wrapper d-flex align-items-center mb-3 float-end">
        <%= link_to 'Add Food', new_food_path, class: 'btn btn-primary' %>
      </div>
      <table class="table">
        <thead class="table-header">
          <tr>
            <th>Food</th>
            <th>Measurement unit</th>
            <th>Unit price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-body">
          <%= render partial: 'partials/table_food_item', collection: @foods, as: :food %>
        </tbody>
      </table>
    </div>
  </div>
</section>
