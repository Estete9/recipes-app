<%= image_tag '', class: 'headline-image w-100 opacity-6' %>

<section class="main_page_wrapper w-100">
  <div class="container section-container d-flex flex-column align-items-center">
    <h1 class="main-title mt-5 mb-4">Create a new food</h1>

    <div class="form-wrapper col-lg-6 col-md-8 col-sm-10 col-12">
      <%= form_with(model: @food, url: foods_path, html: { class: 'row g-3' }) do |f| %>
        <div class="col-12 form-fields-group">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, class: 'form-control' %>
        </div>

        <div class="col-12 form-fields-group">
          <%= f.label 'Measurement unit' %>
          <%= f.select :measurement_unit, options_for_select(['grams', 'milliliters', 'units']), { prompt: 'Select a measurement' }, required: true, class: 'form-select' %>
        </div>

        <div class="col-12 form-fields-group">
          <%= f.label 'Unit price' %>
          <%= f.number_field :price, min: 0.01, step: 0.01, required: true, class: 'form-control' %>
        </div>

        <div class="col-12 actions">
          <%= f.submit "Save food", class: 'btn btn-primary' %>
          <%= link_to 'Cancel', foods_path, class: 'btn btn-warning ms-2' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
